@using SeyahatBlogu.Models.Siniflar
@model List<Yorumlar>

@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="py-3">Yorum Listesi</h2>

<table class="table table-hover table-striped table-bordered">

    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı Adı</th>
            <th>Mail Adresi</th>
            <th>Yorum</th>
            <th>Blog</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.KullaniciAdi</td>
                <td>@item.Mail</td>
                <td>@item.Yorum</td>
                <td>@item.Blog.Baslik</td>
                <td><a href="/Admin/YorumSil/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/YorumGetir/@item.ID" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }

    </tbody>

</table>