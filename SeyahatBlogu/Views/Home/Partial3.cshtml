@using SeyahatBlogu.Models.Siniflar
@model List<Blog>

<div class="padding">
    <h4>This Week's Top 10</h4>
    <ul class="list list-pad">

        @foreach (var item in Model)
        {
            <li class="list-bg"><span>1</span><a href="/Blog/BlogDetay/@item.ID">@item.Baslik.Substring(0, @item.Baslik.Substring(0, 23).LastIndexOf(" "))</a></li>
        }        
    </ul>
    <a href="/Blog" class="link1">Tüm blogları görmek için tıklayın.</a>
</div>
