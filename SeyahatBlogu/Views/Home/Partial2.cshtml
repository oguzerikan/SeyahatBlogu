@using SeyahatBlogu.Models.Siniflar
@model List<Blog>

@foreach (var item in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" style="width:276px; height:150px; object-fit:cover; cursor:pointer;"/>
        </div>
        <div class="left-text">

            <h4>@item.Baslik.Substring(0, 35)</h4>
            <span class="doller">@item.Tarih.ToString("d")</span>
            <p>@item.Aciklama.Substring(0, 120)</p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
}
