@using SeyahatBlogu.Models.Siniflar
@model List<Blog>

<div class="padding1">
    <h4>En Beğendiğim Yerler</h4>
    <div class="box-left">
        @foreach (var item in Model)
        {
            <div class="bot-img">
                <a href="/Blog/BlogDetay/@item.ID">
                    <img src="@item.BlogImage" alt="" style="width:120px; height:95px; object-fit:cover;" />
                </a>
            </div>
            <div class="bot-desc">
                <p>@item.Aciklama.Substring(0,item.Aciklama.Substring(0,110).LastIndexOf(" ")) </p>
            </div>
            <div class="clear"></div>
        }
    </div>
    <div class="box1-left">
        @Html.Action("Partial5","Home")     
    </div>
</div>
